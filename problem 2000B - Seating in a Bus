#include <bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin >> t;
 
    while (t--)
    {
        int n;
        cin >> n;
 
        vector<int> a(n);
        for (int i = 0; i < n; i++)
            cin >> a[i];

        int left = a[0], right = a[0];
        bool ok = true;

        for (int i = 1; i < n; i++)
        {
            if (a[i] == left - 1)
            {
                left--; 
            }

            else if (a[i] == right + 1)
            {
                right++; 
            }

            else
            {
                ok = false;
                break;
            }
        }

        cout << (ok ? "YES\n" : "NO\n");
    }
    
    return 0;
}
