#include <iostream>
#include <string>
using namespace std;

int main()
{
    int n;
    cin >> n;
    string a;
    int x = 0;
    for (int i = 0; i < n; i++)
    {
        cin >> a;
        if ( (a == "++X") || (a == "X++") )
        {
            ++x;
        }
        else
        {
            --x;
        }
    }
    cout << x << endl;
}
