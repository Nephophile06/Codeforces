#include <iostream>
using namespace std;

int main() 
{
    int t;
    cin >> t;

    while (t--) 
    {
        int n, sum = 0;
        cin >> n;
        for (int i = 0, x; i < n; ++i) 
        {
            cin >> x;
            sum += x;
        }

        if (sum == n) 
            cout << 0 << "\n";
        else if (sum > n) 
            cout << sum - n << "\n";
        else 
            cout << 1 << "\n";
    }

    return 0;
}
