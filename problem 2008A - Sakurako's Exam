#include <iostream>
using namespace std;

void solve() 
{
    int a, b;
    cin >> a >> b;
    
    if (a % 2 == 1) 
    {
        cout << "NO\n";
        return;
    }
    
    if (a == 0 && b % 2 == 1) 
    {
        cout << "NO\n";
        return;
    }
    
    if (a == 0 && b == 1) 
    {
        cout << "NO\n";
        return;
    }
    
    cout << "YES\n";
}

int main() 
{
    int t;
    cin >> t;
    
    while (t--) 
    {
        solve();
    }
    
    return 0;
}
